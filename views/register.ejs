<%- include ("./partials/cabecera") %> 

<style>
@media (max-width: 1700px) {
    .formulario{
      width: 40%;
    }
}
    
  @media (max-width: 600px) {
    .formulario{
      width: 100%;
      height: 100%;
    }
    .email .password {
      min-width: 80%;
    }
  }
  </style>
<div class="text-center mt-5  mb-5">

    <form class="container formulario col-3 mt-5" action="/register" method="post">
      <div class="text-center m-auto">
        <img src="./logo/blanco.png" alt="" style="width: 200px; margin-top: 150px;">
    </div>

        <h1 class="mt-3  text-white" style="font-weight: 800;">Bienvenido</h1>
       
        <div class="form-floating text-dark mt-5">
            <input type="text" name="name" class="form-control email" placeholder="Jordan" required>
            <label for="floatingInput" class="">Nombre</label>
          </div>
        <div class="form-floating text-dark mt-5">
          <input type="email" name="email" class="form-control email" placeholder="name@example.com" required>
          <label for="floatingInput" class="">Email</label>
        </div>
        <div class="form-floating text-dark mt-5">
          <input type="number" name="codigo" class="form-control email" placeholder="1234567" required>
          <label for="floatingInput" class="">Codigo activación</label>
        </div>
        <div class="form-floating mt-4 text-dark">
          <input type="password" class="form-control password" id="floatingPassword" name="password" placeholder="Password" required>
          <label for="floatingPassword">Contraseña</label>
        </div>
        <div class="form-floating mt-4 text-dark">
            <input type="password" class="form-control password" id="floatingPassword2" name="password" placeholder="Password" required>
            <label for="floatingPassword">Repite contraseña</label>
          </div>
          <div class="mt-3">
            <input type="checkbox" id="politicas" name="politicas" required>
            <label style="font-weight: 800;" for="politicas">Acepto las políticas de privacidad.</label>
          </div>
  
        <div class="help">
            <%- existe==true?'<p class="mt-3 text-danger"> Este correo ya esta registrado</p>':''%> 
            <%- codigoExiste==false?'<p class="mt-3 text-danger"> Codigo de registro invalido</p>':''%> 
        </div>

        <button class="w-100 mt-4 btn btn-light text-dark" type="submit">Registrarse</button>
      </form>

      <br>
      <p>¿Ya tienes una cuenta en trade?</p>
      <a href="/login" class="forgot-password1 mt-4">Iniciar sesión</a>
</div>
<%- include ("./partials/pie") %> 
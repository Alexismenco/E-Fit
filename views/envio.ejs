<%- include ("./partials/cabecera") %> 

<style>
.oval-line {
  width: 100%;
  height: 150px;
  border-bottom-left-radius: 40%;
  border-bottom-right-radius: 40%;
  background-color: rgb(18, 239, 18);
  border-bottom: 2px solid #000;

}

.container {
        position: relative;
        display: inline-block;
        margin-top: 50px;
    }

.container span {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 85%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 27px;
    -webkit-text-stroke: 2px black;
}

.container p {
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 65%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 20px;
    -webkit-text-stroke: 1px black;
    margin-top: -25px;
}
.container .segundo {
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 85%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 20px;
    -webkit-text-stroke: 1px black;
}

.container img {
    width: 100%;
    border-radius: 50px;
    box-shadow: 0 22px 20px rgba(62, 128, 125, 0.5);
}

@media (min-width: 800px) {
    .container img{
        width: 75%;
    }
  }
@media (min-width: 700px) {
    .cont-img{
        margin-left: 300px !important;
    }
     .cont-img2{
        margin-right: 300px !important;
    }
  }

  #input-1::placeholder, #input-2::placeholder  {
  color: #fff;
}

   
</style>

<!-- Menu arriba -->
<div class="oval-line">
    <div>
        <a href="">
            <img src="./perfil/<%- fotoPerfil %>" alt="" style="width: 50px; border-radius: 50%; margin-top:45px; margin-left: 20px;">
        </a>
    </div>

    <div class="text-center" style="margin-top: -70px;">
        <span style="font-weight: 800; font-size: 20px;">Pago</span>
    </div>
    
    <div style="width: 100%; margin-top: 50px;">
        <div style="display: flex; justify-content: space-between;">
            <a href="#">
                <img class="cont-img" src="https://img.icons8.com/?size=512&id=2287GodioQ7D&format=png" alt="" style="width: 30px; margin-left: 70px;">
            </a>
        
            <a href="#">
                <img class="cont-img2" src="https://img.icons8.com/?size=512&id=Q4SSPv6y2vU9&format=png" alt="" style="width: 30px; margin-right: 70px;">
            </a>
        </div>
    </div>

</div>

<!-- Card -->
<div class="text-dark contenedor-card" style="display: flex; flex-wrap: wrap; width: 100%; text-align: center; margin-top: 40px;">

    <form class="m-auto mt-5" action="/pago?plan=<%= planDeportes.id %>" method="post">
        <p class="text-dark" style="font-weight: 800;">Añade dirección de envio</p>
        <p class="text-dark" style="font-weight: 800;">Puedes modificar la dirección en ajustes</p>
        <div style="flex-basis: 50%;">
            <a href="#" class="container">
                <img src="<%= planDeportes.Foto %>" alt="" style="width: 171px; height: 171px;">
                <span><%= planDeportes.Descripcion %></span>
                <p>Plan: <%= planDeportes.Tiempo %></p>
                <p class="segundo">Precio: $<%= planDeportes.Precio %></p>
            </a>
        </div>
        <input class="btn btn-dark" type="number" placeholder="Cantidad" name="id" value="<%= planDeportes.id %>" required hidden>

        <div class="form-floating mt-5">
            <input id="input-1" type="text" name="nombre" class="form-control email" placeholder="Nombre, ¿Quien recibe?" style="border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); background-color: black; color: white; opacity: 0.8;" required>
        </div>

        <div class="form-floating mt-2">
            <input id="input-1" type="text" name="region" class="form-control email" placeholder="Región" style="border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); background-color: black; color: white; opacity: 0.8;" required>
        </div>

        <div class="form-floating mt-2">
            <input id="input-1" type="text" name="comuna" class="form-control email" placeholder="Comuna" style="border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); background-color: black; color: white; opacity: 0.8;" required>
        </div>

        <div class="form-floating mt-2">
            <input id="input-1" type="text" name="direccion" class="form-control email" placeholder="Dirección y Número" style="border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); background-color: black; color: white; opacity: 0.8;" required>
        </div>
        
        <button class="w-100 mt-5 btn btn-lg" type="submit" style="background-color: rgb(18, 239, 18); border-radius: 20px 20px 20px 20px;">Comprar</button>
      </form>
 </div>
   

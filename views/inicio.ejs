<%- include ("./partials/cabecera") %>

  <style>
    @media (max-width: 2700px) {
      #contenedor-login {
        width: 40%;
      }

      .contenedor-btn>a {
        width: 25% !important;
        display: block;
        margin: 0 auto;
      }
    }

    @media (max-width: 600px) {
      #contenedor-login {
        width: 100%;
        height: 100vh;
      }

      .contenedor-btn>a {
        width: 75% !important;
        margin: 0 auto;
      }
    }

    #splash {
      margin: 200px;
      display: flex;
      justify-content: center;
      /* Alinea horizontalmente */
      align-items: center;
      /* Alinea verticalmente */
    }
  </style>
  <script>
    window.onload = () => {
      // Oculta la pantalla de presentación después de 1 segundo
      setTimeout(() => {
        var splash = document.getElementById("splash");
        var fondo = document.getElementById("fondo");
        splash.style.display = "none";
        fondo.style.backgroundColor = "#000"
        document.getElementById("contenedor-login").style.visibility = "visible";
      }, 1000);
    };
  </script>

  <div id="splash">
    <div class="text-center m-auto">
      <img src="./logo/blanco.png" alt="" style="width: 200px; margin-top: 150px;">
    </div>
  </div>

  <div id="contenedor-login" class="text-center w-100" style="visibility: hidden;">
    <div class="text-center m-auto">
        <img src="./logo/blanco.png" alt="" style="width: 200px; margin-top: 150px;">
    </div>

    <div class="contenedor-btn" style="position:absolute; bottom:50px; width: 100%;">
      <a href="/login" class="botones input text-white w-75 btn btn-lg mt-4"
        style="background-color: rgb(18, 239, 18); border-radius: 20px 20px 20px 20px;border: 2px solid black;">Iniciar sesión</a>
      <a href="/register" class="botones btn btn-lg w-75 text-white mt-4"
        style="background-color: rgb(9, 11, 9); border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18);">Crea
        tu cuenta</a>
        <a href="/politica-privacidad" class="botones btn btn-lg w-75 text-white mt-4"
        style="background-color: rgb(9, 11, 9); border-radius: 20px 20px 20px 20px; border: 2px solid rgb(23, 90, 23);">Politica
        de privacidad</a>
    </div>
  </div>

  <%- include ("./partials/pie") %>
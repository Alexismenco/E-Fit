    /* Estilos para la etiqueta hr */
hr {
  border: none; /* Quitamos el borde por defecto */
  height: 3px; /* Altura del separador */
  background-color: #ccc; /* Color de fondo */
  margin: 10px 0; /* Margen superior e inferior */
}

/* Estilos para el separador */
hr::before {
  content: ""; /* Creamos un elemento vacío antes del hr */
  display: block; /* Lo mostramos como bloque */
  height: 10px; /* Altura del separador decorativo */
  width: 100%; /* Ancho del separador decorativo */
  background-color: #2c2525; /* Color de fondo del separador decorativo */
  border-radius: 20px; /* Borde redondeado */
  position: relative; /* Lo posicionamos respecto al hr */
  top: -5px; /* Lo movemos hacia arriba para solapar el hr */
}


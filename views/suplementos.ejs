<style>
.oval-line {
  width: 100%;
  height: 150px;
  border-bottom-left-radius: 40%;
  border-bottom-right-radius: 40%;
  background-color: rgb(18, 239, 18);
  border-bottom: 2px solid #000;

}

.container {
        position: relative;
        display: inline-block;
        margin-top: 50px;
        text-decoration: none;
    }

.container span {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 85%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 25px;
    -webkit-text-stroke: 1px black;
}

.container p {
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 65%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 20px;
    -webkit-text-stroke: 1px black;
    margin-top: -25px;
}

.container .segundo {
    position: absolute;
    top: 80%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 85%;
    text-align: center;
    color: black;
    font-weight: 800;
    font-size: 20px;
    -webkit-text-stroke: 1px black;
}


@media (min-width: 800px) {
    .container img{
        width: 75%;
    }
  }
@media (min-width: 700px) {
    .cont-img{
        margin-left: 300px !important;
    }
     .cont-img2{
        margin-right: 300px !important;
    }
  }
   
</style>


            <div class="card-body">
            <h5 class="card-title"><%= productos[i].nombre %></h5>
            <p class="card-text">Precio: $<%= productos[i].precio %></p>
            <a href="/buy?plan=<%= productos[i].id %>" class="btn btn-primary w-75" style="background-color: rgb(18, 239, 18); border-radius: 20px 20px 20px 20px;">Ver</a>
            </div>
        </div>
    <% } %> 


<%- include ("./partials/cabecera") %> 

<style>
@media (max-width: 1700px) {
    .formulario{
      width: 40%;
      color: white;
    }
}
    
  @media (max-width: 600px) {
    .formulario{
      width: 100%;
      height: 100%;
      color: white;
    }
    .email .password {
      min-width: 80%;
      color: white;
    }
  }

  #splash{
    margin: 200px;
    display: flex;
    justify-content: center; /* Alinea horizontalmente */
    align-items: center; /* Alinea verticalmente */
  }

  #input-1::placeholder, #input-2::placeholder  {
  color: #fff;
  font-weight: 600;
}
  </style>
    <script>
      window.onload = function() {
        // Oculta la pantalla de presentación después de 1 segundo
        setTimeout(() => {
        var splash = document.getElementById("splash");
        var fondo = document.getElementById("fondo");
        splash.style.display = "none";
        fondo.style.backgroundColor = "#000"
        document.getElementById("contenedor-login").style.visibility = "visible";
      }, 1000);
      };
    </script>

<div id="splash">
  <div class="text-center m-auto">
    <img src="./logo/blanco.png" alt="" style="width: 200px; margin-top: 150px;">
</div>
</div>

<div id="contenedor-login" class="contenedor-login text-center" style="visibility: hidden;">

    <form class="container formulario col-3" action="/login" method="post">
      <div class="text-center m-auto">
        <img src="./logo/blanco.png" alt="" style="width: 200px; margin-top: 150px;">
    </div>
       
        <div class="form-floating  mt-5">
          <input id="input-1" type="email" name="email" class="form-control email" placeholder="Correo Electronico" style="border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); margin-top: 150px; background-color: black; color: white; opacity: 0.8;" required>
          <!--<label for="floatingInput" class="">Usuario</label>-->
        </div>
        <div class="form-floating mt-3 text-white mb-4">
          <input id="input-2" type="password" class="form-control password mt-5" name="password" placeholder="Contraseña" style="border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); background-color: black; color: white; opacity: 0.8;" required>
          <!--<label for="floatingPassword">Contraseña</label>-->
        </div>
        <a href="/resetpassword" class="text-white" style="font-weight: 600; text-decoration: none;">¿Olvidaste tu contraseña?</a>
    
        <div class="help">
          <%- existeUsuario==false?'<p class="mt-3 text-danger"> Error correo o contraseña incorrectas</p>':''%> 
      </div>
        <button class="w-100 mt-5 btn btn-lg" type="submit" style="background-color: rgb(18, 239, 18); border-radius: 20px 20px 20px 20px; color:#fff; border: 2px solid black;">Iniciar sesión</button>
      </form>
      <div class="w-75" style="height: 1px; background-color: #fff; margin: auto; margin-top: 100px;"></div>

      <a href="/register" class="w-75 mt-4 btn btn-lg text-white" style="background-color: rgb(9, 11, 9); border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18); opacity: 0.7;">Crea tu cuenta</a>
      <a href="/politica-privacidad" class="w-75 mt-4 btn btn-lg text-white" style="background-color: rgb(9, 11, 9); border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 100, 18); opacity: 0.7;">Politicas de privacidad</a>



</div>

  

 

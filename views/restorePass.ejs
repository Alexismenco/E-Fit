<%- include ("./partials/cabecera") %> 

<style>
@media (max-width: 1700px) {
    .formulario{
      width: 40%;
    }
}
    
  @media (max-width: 600px) {
    .formulario{
      width: 100%;
      height: 100%;
    }
    .email {
      width: 100%;
    }
  }

  input[type="email"] {
  padding: 5px;
  outline: none;
  color: white;
  background-color: rgb(45, 45, 62);

}

input[type="email"]::placeholder {
  color: white;
}

  .olvidado-text{
    font-size: 35px;
    font-weight: 700;
  }
  .recupera-text{
    font-size: 1em;
    opacity: 0.8;
  }
  </style>
<div class="text-center mt-5 mb-5">

    <form class="container formulario col-3 mt-5" action="/resetpassword" method="post">
        <p class=" text-white olvidado-text">Haz olvidado tu contraseña?</p>

        <p class="mt-1 mb-3 recupera-text text-white" style="font-weight: 800;">Recupera tu contraseña</p>
       
    
        <div class="form-floating text-dark" style="margin-top: 100px;">
          <input type="email" name="email" class="email " placeholder="Email" style="background-color: black; border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18);;" required>
        </div>
    
        <div class="checkbox mb-3">
    
        </div>
        
        <button class="w-100 mt-5 btn btn-lg text-white" type="submit" style="background-color: rgb(9, 11, 9); border-radius: 20px 20px 20px 20px; border: 2px solid rgb(18, 239, 18);">Enviar</button>
      </form>
     

    </div>

<%- include ("./partials/cabecera") %> 

<style>
.oval-line {
  width: 100%;
  height: 150px;
  border-bottom-left-radius: 40%;
  border-bottom-right-radius: 40%;
  background-color: rgb(18, 239, 18);
  border-bottom: 2px solid #000;

}

.container {
        position: relative;
        display: inline-block;
        margin-top: 40px;
        text-decoration: none;
    }

.container span {
    position: absolute;
    top: 25%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 22px;
    -webkit-text-stroke: 1px black;
}

.container p {
    position: absolute;
    top: 78%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 65%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 20px;
    -webkit-text-stroke: 1px black;
    margin-top: -25px;
}

.container .segundo {
    position: absolute;
    top: 98%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 85%;
    text-align: center;
    color: white;
    font-weight: 800;
    font-size: 20px;
    -webkit-text-stroke: 1px black;
}


.container img {
    width: 100%;
    border-radius: 50px;
    box-shadow: 0 22px 20px rgba(62, 128, 125, 0.5);
}

@media (min-width: 800px) {
    .container img{
        width: 75%;
    }
  }
@media (min-width: 700px) {
    .cont-img{
        margin-left: 300px !important;
    }
     .cont-img2{
        margin-right: 300px !important;
    }
  }
   
</style>


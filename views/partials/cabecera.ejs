<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
  <body class="text-white" id="fondo">
    <script>
      var ruta= window.location.pathname;
      var fondo = document.getElementById('fondo');
      if(ruta =='/'){
        fondo.style.backgroundImage = "url('./fondo/fotos-gym/11.jpg')";
      }else if (ruta == '/deportes'){
        fondo.style.backgroundImage = "url('./fondo/fotos-gym/10.jpg')";
      }else if (ruta == '/planes'){
        fondo.style.backgroundImage = "url('./fondo/fotos-gym/10.jpg')";
      }else if (ruta == '/nutricion'){
        fondo.style.backgroundImage = "url('./fondo/nutricion.png')";
      }else if (ruta == '/maquinas'){
        fondo.style.backgroundImage = "url('./fondo/fotos-gym/21.jpg')";
      } else if (ruta == '/contenido'){
        fondo.style.backgroundImage = "url('./fondo/fotos-gym/10.jpg')";
      }else if(ruta =='/ajustes' || ruta=='/perfil' || ruta =='/confirm' || ruta=='/perfil/' || ruta=='/seguridad' || ruta=='/ayuda' || ruta=='/pago' || ruta=='/dev' || ruta=='/direccion' || ruta=='/buy' || ruta =='/politica-privacidad' || ruta== '/aviso-legal' || ruta == '/politica-de-cookie'){
        fondo.style.backgroundColor= '#fff';
      }else if(ruta == '/inicio' || '/login'){
        fondo.style.backgroundColor = "#000"
        setTimeout(() => {
          fondo.style.backgroundColor = "transparent"; // Elimina el color de fondo después de un segundo
          fondo.style.backgroundImage = "url('./fondo/fotos-gym/21.jpg')";
        }, 1000);
      }else{
        fondo.style.backgroundImage = "url('./fondo/fondo.png')";
      }
  </script>
          
